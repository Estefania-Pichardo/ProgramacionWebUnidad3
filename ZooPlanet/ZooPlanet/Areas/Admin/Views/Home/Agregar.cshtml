@model ZooPlanet.Models.ViewModels.EspeciesViewModel
@{
    Layout = "_Layout";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h1>Agregar Especies</h1>

<form method="post" action="~/Admin/Home/Agregar">
    <label>Nombre:</label>
    <input asp-for="Especie.Especie"  required="required" />
    <label>Clase:</label>
    <select asp-for="Especie.IdClase" asp-items="@(new SelectList(Model.Clases, "Id", "Nombre"))" required="required">
        <option value="">Seleccione una clase</option>
    </select>
    <label>Habitat:</label>
    <input asp-for="Especie.Habitat" required="required" />
    <label>Peso:</label>
    <input type="number" step="0.1" asp-for="Especie.Peso" />
    <label>Tamaño:</label>
    <input step="0.1" asp-for="Especie.Tamaño"/>
    <label>Observaciones:</label>
    <textarea asp-for="Especie.Observaciones"></textarea>
    <p>
        @Html.ValidationSummary()
    </p>

    <input type="submit" value="Agregar" />

    <a href="~/Admin">
        <input type="button" value="Cancelar" />
    </a>
</form>

